- model_class = Repository
.page-header
  .col-md-offset-1
    %h1 Repository
  
= render 'shared/flashes'

.row.fluid
  = form_for @repository, html: { multipart: true, class: 'form-horizontal', remote: true, id: 'new_form'}  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    
    .col-md-offset-1
      .form-group
        .col-sm-offset-1.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), repositories_path, :class => 'btn btn-default'
        .col-sm-offset-0.col-sm-2
          /= f.submit t('create'), class: "btn btn-primary"
 
