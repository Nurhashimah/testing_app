.row.fluid
  = form_for @repository, html: { multipart: true, class: 'form-horizontal',  remote: true, id: 'new_form'}  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    .col-md-offset-1
      .form-group
        .col-sm-offset-1.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), repository_path(@repository), :class => 'btn btn-default'
        .col-sm-offset-0.col-sm-2
          = f.submit t('update'), class: "btn btn-primary"